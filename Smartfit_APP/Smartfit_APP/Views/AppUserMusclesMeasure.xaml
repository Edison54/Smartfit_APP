<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Smartfit_APP.Views.AppUserMusclesMeasure">
    <ContentPage.Content>
        <ScrollView>




            <StackLayout>
                <Label Text="Measure list"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"  FontFamily="Josefinbold"  FontSize="30" TextColor="Black"/>
                
                <Label Text="Muscles names and CM measure: "
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"  FontFamily="Josefinbold"  TextColor="Black" FontSize="20"/>



                <ListView x:Name="LstMeasure" RowHeight="100" SelectionMode="None" >

                    <ListView.ItemTemplate >


                        <DataTemplate >

                            <ImageCell TextColor="Black" 
                                       Text="{Binding Musculo} "
                                       Detail="{Binding Medida}"

                                       Tapped="ImageCell_Tapped"

                                       />

                        </DataTemplate>

                    </ListView.ItemTemplate>


                </ListView>





            </StackLayout>


        </ScrollView>
    </ContentPage.Content>
</ContentPage>